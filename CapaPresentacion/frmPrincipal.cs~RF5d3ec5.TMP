        public void formulariosactivos (string formulario)
        {
            switch(formulario)
            {
                case "FrmTbUsuarios":
                    actvFor = "FrmTbUsuarios";

                break;

                case "FrmTbSatatus":
                    actvFor = "FrmTbSatatus";
                break;
