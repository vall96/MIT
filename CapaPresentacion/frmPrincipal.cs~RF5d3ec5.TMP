        }
        public void accionesFormularios(string formulario, string estado)
        {
           switch (formulario)
            {
                case "FrmTbUsuarios":
                    if (estado == "inicial")
                    {
                        venTbUsuarios = new FrmTbUsuarios();
                        venTbUsuarios.MdiParent = this;
                        venTbUsuarios.Show();
                        num_ventanas++;
                    }
                    else
                    {
                        if (estado == "cerrar")
                        {
                            
                            venTbUsuarios.Close();
                            num_ventanas--;
                        }
                    }
                                   

                    //default:
                    break;

                case "FrmTbSatatus":
                    if (estado == "inicial")
                    {
                        ventbStatus = new frmStaUsuario();
                        ventbStatus.MdiParent = this;
                        ventbStatus.Show();
                        num_ventanas++;
                    }
                    else
                    {
                        if (estado == "cerrar")
                        {

                            ventbStatus.Close();
                            num_ventanas--;
                        }
                    }

                    break;


            }
        }

        public void cerrarVentanas (string formulario, string estado)
        {
            switch (formulario)
            {
                case "FrmTbUsuarios":
                    if (estado=="cerrar")
                    {
                        venTbUsuarios = new FrmTbUsuarios();
                        venTbUsuarios.MdiParent = this;
                        venTbUsuarios.Close();
                    }
                    break;
                case "FrmTbSatatus":
                    {
                        if (estado == "cerrar")
                        {
                            ventbStatus.Close();
                        }
                    }
                    break;
            }

        }
